{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; env {{ .Vars }} {{ .Path }}",
      "scripts": [
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/zeroconf.sh",
        "scripts/ansible.sh",
        "scripts/vmtools.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "iso_urls": [
        "file://iso/FreeBSD-{{ user `version` }}{{ user `branch` }}-{{ user `arch` }}{{ user `snapshot` }}{{ user `revision` }}-disc1.iso",
        "{{ user `mirror` }}/{{ user `directory` }}/ISO-IMAGES/{{ user `version` }}/FreeBSD-{{ user `version` }}{{ user `branch` }}-{{ user `arch` }}{{ user `snapshot` }}{{ user `revision` }}-disc1.iso"
      ],
      "iso_checksum_url": "{{ user `mirror` }}/{{ user `directory` }}/ISO-IMAGES/{{ user `version` }}/CHECKSUM.SHA256-FreeBSD-{{ user `version` }}{{ user `branch` }}-{{ user `arch` }}{{ user `snapshot` }}{{ user `revision` }}",
      "iso_checksum_type": "sha256",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "1000s",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "guest_os_type": "{{ user `guest_os_type` }}",
      "hard_drive_interface": "sata",
      "headless": true,
      "iso_interface": "sata",
      "shutdown_command": "poweroff",
      "boot_wait": "10s",
      "http_directory": "http",
      "disk_size": "{{ user `disk_size` }}",
      "vboxmanage": [
        [
          "modifyvm", "{{ .Name }}",
          "--audio", "none",
          "--cpus", "{{ user `cpus` }}",
          "--memory", "{{ user `memory` }}",
          "--nictype1", "virtio",
          "--nictype2", "virtio"
        ],
        [
          "storagectl", "{{ .Name }}",
          "--name", "IDE Controller",
          "--remove"
        ]
      ],
      "vm_name": "box",
      "boot_command": [
        "<esc><wait>",
        "boot -s<enter>",
        "<wait10><wait5>",
        "/bin/sh<enter><wait>",
        "mdmfs -s 100m md1 /tmp<enter><wait>",
        "dhclient -l /tmp/dhclient.lease.vtnet0 vtnet0<enter><wait5>",
        "fetch -o /tmp/installerconfig http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig_{{ user `filesystem` }}<enter><wait5>",
        "bsdinstall script /tmp/installerconfig<enter>"
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "vagrantfile_template": "vagrantfile.tpl",
      "output": "./builds/FreeBSD-{{ user `version` }}{{ user `branch` }}-{{ user `arch` }}{{ user `snapshot` }}{{ user `revision` }}.box"
    }]
  ]
}
